@model FIAP.CP2.Model.ProfissaoModel
@{
    ViewData["Title"] = "Editar Profissão";
}
<h2>Editar Profissão</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Status"></label>
        <input asp-for="Status" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Descricao"></label>
        <textarea asp-for="Descricao" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="TecnologiasRelacionadas"></label>
        <input asp-for="TecnologiasRelacionadas" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
