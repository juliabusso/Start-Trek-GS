@model List<FIAP.CP2.Model.JogoEducativo>

@{
    ViewData["Title"] = "Jogos Educativos na Steam";
}

<h1>🎮 @ViewData["Title"]</h1>

<table class="table table-striped" style="width: 80%; margin: 20px auto;">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Desenvolvedor</th>
            <th>Linguagem / Tema</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var jogo in Model)
        {
            <tr>
                <td>@jogo.Nome</td>
                <td>@jogo.Desenvolvedor</td>
                <td>@jogo.Linguagem</td>
            </tr>
        }
    </tbody>
</table>

